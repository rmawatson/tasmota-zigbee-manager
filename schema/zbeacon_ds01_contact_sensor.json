{
    "version": 1,
    "mappings": {
        "Zbeacon:DS01": "zbeacon_ds01_contact_sensor"
    },
    "schemas": {
        "zbeacon_ds01_contact_sensor": {
            "include": [
                "link_quality",
                "battery_percentage",
                "battery_voltage"
            ],
            "config": {
                "battery": 1,
                "deepsleep": 1
            },
            "switches": {
                "Contact": {
                    "has_value": "/device_info,attr_list -> attr_list.contains('Contact')",
                    "parse_value": "/device_info,attr_list -> attr_list['Contact'] ? true : false"
                }
            }
        }
    }
}