{
    "version": 1,
    "mappings": {
        "SONOFF:ZBMINIR2": "sonoff_minir2"
    },
    "schemas": {
        "sonoff_minir2": {
            "include": [
                "link_quality"
            ],
            "relays": {
                "Power": {
                    "has_value": "/device_info,attr_list -> attr_list.contains('Power')",
                    "parse_value": "/device_info,attr_list -> attr_list['Power'] ? 'ON' : 'OFF'",
                    "set_value": "/device_info,value,ctx -> ctx.zb_write(device_info,{'Power':value ? 1 : 0})",
                    "request_value": "/device_info,ctx -> ctx.zb_read(device_info,{'Power':1})"
                }
            },
            "commands": {
                "TurboMode": {
                    "has_value": "/device_info,attr_list -> attr_list.contains('FC11/0012')",
                    "parse_value": "/device_info,attr_list -> attr_list['FC11/0012']",
                    "request_value": "/device_info,ctx -> ctx.zb_write(device_info,f'FC11_00/120029')",
                    "set_value": "/device_info,payload,ctx -> ctx.zb_write(device_info,f'FC11_02/120029{payload:.2x}00')"
                }
            }
        }
    }
}